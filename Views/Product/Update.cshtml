@model BestStoreMVC.Models.ProductModel

@{
    ViewData["Title"] = "Update Product";
}

<h2>Update Product</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="Update" method="post">
    <div class="mb-3">
        <label for="Id" class="form-label">Product ID</label>
        <input asp-for="Id" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Brand" class="form-label">Brand</label>
        <input asp-for="Brand" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Category" class="form-label">Category</label>
        <input asp-for="Category" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" required />
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label for="ImageFileName" class="form-label">Image File Name</label>
        <input asp-for="ImageFileName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update Product</button>
</form>
